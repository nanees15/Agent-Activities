<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookitemlinearlayout"

    android:layout_width="350dp"

    android:layout_height="100dp"
    android:layout_gravity="center|top"
    android:layout_marginBottom="25dp"
    android:background="@drawable/background_activity_item"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_inclientLIst"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/cairo"
            android:gravity="right|center_vertical|end"
            android:text="09:00 صباحا"
            android:textColor="#535A5F" />

        <TextView
            android:id="@+id/clientname_InclientList"
            android:layout_width="148dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/cairo"
            android:gravity="left|center_vertical|end"
            android:text="الاهلي ممكن"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>