<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCalendarMonth" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#535A5F</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>


