<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_corner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape for the rounded corners on top -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Set the desired background color -->
            <corners android:topLeftRadius="26dp" android:topRightRadius="26dp" /> <!-- Rounded top-left and top-right corners -->
        </shape>
    </item>
    <!-- Shape for the squared corners at the bottom -->
    <item android:top="26dp"> <!-- Adjust the top margin to match the radius of rounded corners -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent color to reveal the below layer -->
        </shape>
    </item>
</layer-list>



